<% provide :title, t(".title") %>
<section class="login_box_area">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="login_form_inner">
          <h2>Edit <%= resource_name.to_s.humanize %></h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
            html: { method: :put, class: "row reg_form" }) do |f| %>
            <div class="col-lg-8 form-group">
              <%= render "devise/shared/error_messages", resource: resource %>
            </div>
            <div class="col-lg-8 form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "form-control", placeholder: t(".email") %>
            </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
            <div class="col-lg-8 form-group">
              <%= f.text_field :name, autocomplete: "name",
                class: "form-control", placeholder: t(".name") %>
            </div>
            <div class="col-md-8 form-group">
              <%= f.telephone_field :phone, autocomplete: "phone", class: "form-control", placeholder: t(".phone") %>
            </div>
            <div class="col-md-8 form-group">
              <%= f.text_field :address, autocomplete: "address", class: "form-control", placeholder: t(".address") %>
            </div>
            <div class="col-md-8 form-group d-flex">
              <%= f.file_field :avatar, accept: Settings.accept_image %>
            </div>
            <div class="col-lg-8 form-group">
              <i><%= t ".notice_blank_password" %></i><br />
              <%= f.password_field :password, autocomplete: "new-password",
                class: "form-control", placeholder: t(".password") %>
            </div>
            <div class="col-lg-8 form-group">
              <%= f.password_field :password_confirmation, autocomplete: "new-password",
                class: "form-control", placeholder: t(".password_confirmation") %>
            </div>
            <div class="col-lg-8 form-group">
              <i><%= t ".notice_current_password" %></i><br />
              <%= f.password_field :current_password, autocomplete: "current-password",
                class: "form-control", placeholder: t(".current_password") %>
            </div>
            <div class="col-md-8 form-group">
              <%= f.submit t(".edit"), class: "primary-btn" %>
            </div>
          <% end %>
          <h3>Cancel my account</h3>
          <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
          <%= link_to "Back", :back %>
        </div>
      </div>
    </div>
  </div>
</section>
