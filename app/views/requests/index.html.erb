<% provide :title, t(".title") %>
<section class="section_gap_bottom">
  <div class="main-content">
    <div class="main-content-inner container">
      <div class="page-content">
        <div class="page-header">
          <hr>
        </div>
        <!-- /.page-header -->
        <div class="row">
          <div class="col-xs-12">
            <h5>
              <%= link_to(new_request_path) do %>
                <span class="fas fa-plus"><%= t ".new" %></span>
              <% end %>
            </h5>
            <!-- div.dataTables_borderWrap -->
            <div>
              <% if @requests.any? %>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th><%= t ".name" %></th>
                      <th><%= t ".picture" %></th>
                      <th><%= t ".price" %></th>
                      <th><%= t ".category" %></th>
                      <th><%= t ".created_at" %></th>
                      <th><%= t ".updated_at" %></th>
                      <th><%= t ".status" %></th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <%= render partial: "requests/request", collection: @requests %>
                  </tbody>
                </table>
              <% else %>
                Chưa có sản phẩm
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <!-- /.page-content -->
      <%= will_paginate %>
    </div>
  </div>
  <!-- /.main-content -->
</section>
