<tr>
  <td><%= counter_index request_counter %></td>
  <% if request.activated? %>
    <td><%= link_to request.name, request %></td>
  <% else %>
    <td><%= link_to request.name, request_path(request) %></td>
  <% end %>
  <% if request.item_photos.first %>
    <% photo_url = request.item_photos.first.photo_url %>
  <% else %>
    <% photo_url = "/assets/fallback/default.jpg" %>
  <% end %>
  <td><%= image_tag photo_url, class: "table-img" %></td>
  <td><%= number_to_currency(request.price) %></td>
  <td><%= request.category_name %></td>
  <% if request.activated? %>
    <td><span class="text-success"><%= t ".approve"%></span></td>
  <% else %>
    <td><span class="text-danger"><%= t ".pending" %></span></td>
  <% end %>
  <td><%= l request.created_at %></td>
  <td><%= l request.updated_at %></td>
  <td>
    <%= link_to edit_request_path(request) do %>
      <span class="far fa-edit"></span> <%= t ".edit" %>
    <% end %>
    <%= link_to(request_path(request), method: :delete, data: { confirm: t(".confirm") }) do %>
      <span class="far fa-trash-alt"></span> <%= t ".delete" %>
    <% end %>
  </td>
</tr>
