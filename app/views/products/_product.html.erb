<!-- single product -->
<div class="col-lg-4 col-md-6">
  <div class="single-product">
    <%= image_tag product.item_photos.first.photo_url, class: "img-fluid"  %>
    <div class="product-details">
      <h6><%= product.name %></h6>
      <div class="price">
        <h6><%= number_to_currency price_discounted(product.price, product.discount) %></h6>
        <% if product.discount > 0 %>
          <h6 class="l-through"><%= number_to_currency product.price %></h6>
        <% end %>
      </div>
      <div class="prd-bottom">
        <%= link_to "javascript:void(0)", class: "social-info shopping", data_product_id: product.id do %>
          <span class="fas fa-cart-plus"></span>
          <p class="hover-text"><%= t (".add_to_cart") %></p>
        <% end %>
        <%= link_to product, class: "social-info" do %>
          <span class="fas fa-info"></span>
          <p class="hover-text"><%= t ".view_more" %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
