<tr>
  <td><%= order.id %></td>
  <td>
    <p>
      <% order.products_orders.each do |p| %>
        <%= p.quantity %>x<%= p.product.name %><%= "," unless p == order.products_orders.last %>
      <% end %>
    </p>
  </td>
  <td><%= l order.created_at, format: :short %></td>
  <td><%= number_to_currency order.total_price %></td>
  <td><%= order.status %></td>
  <td class="actions" data-th="">
    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#modal-<%= order.id %>">
      <%= t ".detail" %>
    </button>
  </td>
</tr>
