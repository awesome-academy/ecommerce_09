<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div class="container">
  <table id="cart" class="table table-hover table-condensed">
    <thead>
      <tr>
        <th></th>
        <th><%= t ".price" %></th>
        <th><%= t ".quantity" %></th>
        <th><%= t ".total" %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "product_cart", collection: @products %>
    </tbody>
    <tfoot>
      <tr>
        <td>
          <%= link_to home_path, class: "btn btn-warning" do %>
            <i class="fa fa-angle-left"></i> <%= t ".back" %>
          <% end %>
        </td>
        <td colspan="2" class="hidden-xs"></td>
        <td class="hidden-xs text-center">
          <strong><%= t ".subtotal"%> <span id="subtotal"><%= number_to_currency get_subtotal_price(@products) %></span></strong>
        </td>
        <td>
          <%= link_to "#", class: "btn btn-success btn-block" do %>
            <%= t ".next" %> <i class="fa fa-angle-right"></i>
          <% end %>
        </td>
      </tr>
    </tfoot>
  </table>
</div>
<%= javascript_include_tag "ajax_cart" %>
