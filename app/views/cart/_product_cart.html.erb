<tr>
  <td data-th="Product">
    <div class="row">
      <div class="col-sm-2 hidden-xs">
        <%= image_tag "p6.jpg", alt: "product", class: "img-responsive"%>
      </div>
      <div class="col-sm-10">
        <h4 class="nomargin"><%= product_cart.name %></h4>
        <p><%= product_cart.description %></p>
      </div>
    </div>
  </td>
  <td data-th="Price"><%= number_to_currency product_cart.price_discounted %></td>
  <td data-th="Quantity">
    <input class="form-control text-center changing" 
    value="<%= product_cart.total_quantity %>" 
    type="number" min="1" max="<%= product_cart.quantity %>" 
    data-product-id="<%= product_cart.id %>">
  </td>
  <td data-th="Subtotal">
    <span id="total-price-<%= product_cart.id %>">
      <%= number_to_currency total_price(product_cart.total_quantity, product_cart.price_discounted) %>
    </span>
    </td>
  <td class="actions" data-th="">
    <%= form_tag cart_path(id:0), method: :delete, data: { confirm: t(".you_sure") } do %>
      <%= button_tag type: :submit, class: "btn btn-danger btn-sm" do %>
        <i class="fa fa-trash"></i>
      <% end %>
    <% end %>
  </td>
</tr>
