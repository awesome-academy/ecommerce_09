<% provide :title, t(".title") %>
<section class="section_gap_bottom">
  <div class="main-content">
    <div class="breadcrumbs ace-save-state" id="breadcrumbs">
      <ul class="breadcrumb">
        <li>
          <i class="ace-icon fa fa-home home-icon"></i>
          <%= link_to t(".home"), admin_path %>
        </li>
        <li class="active"><%= t ".title" %></li>
      </ul>
      <!-- /.breadcrumb -->
    </div>
    <div class="main-content-inner container">
      <div class="page-content">
        <div class="page-header">
          <h1><%= t ".title" %></h1>
          <hr>
        </div>
        <!-- /.page-header -->
        <div class="row">
          <div class="col-xs-12">
            <h5>
              <%= form_tag import_admin_products_path, multipart: true do %>
                <%= file_field_tag :file, class: "form-control" %>
                <%= submit_tag t(".import"), class: "btn btn-info" %>
              <% end %>
            </h5>
            <h5>
              <%= link_to t(".exportCSV"), admin_products_path(format: "csv"), class: "btn btn-info" %>
              <%= link_to t(".exportExcel"), admin_products_path(format: "xls"), class: "btn btn-info" %>
              <%= link_to t(".exportCSV_template"), admin_products_path(format: "csv", template: true), class: "btn btn-info" %>
              <button type="button" class="btn btn-info" data-toggle="modal" data-target="#modal-scheduler" id="schedule">
                <%= t ".scheduler" %>
              </button>
            </h5>
            <h5>
              <%= link_to(new_admin_product_path) do %>
                <span class="fas fa-plus"><%= t ".new" %></span>
              <% end %>
            </h5>
            <!-- div.dataTables_borderWrap -->
            <div>
              <% if @products.any? %>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <th><input type="checkbox" id="checkAll" name="checkAll"></th>
                      <th>ID</th>
                      <th><%= t ".name" %></th>
                      <th><%= t ".picture" %></th>
                      <th><%= t ".price" %></th>
                      <th><%= t ".quantity" %></th>
                      <th><%= t ".discount" %></th>
                      <th><%= t ".category" %></th>
                      <th><%= t ".created_at" %></th>
                      <th><%= t ".updated_at" %></th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <%= render @products %>
                  </tbody>
                </table>
              <% else %>
                Chưa có sản phẩm
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <!-- /.page-content -->
      <%= paginate @products %>
    </div>
  </div>
  <%= render "admin/products/modal" %>
  <!-- /.main-content -->
</section>
<%= javascript_include_tag "checkbox" %>
