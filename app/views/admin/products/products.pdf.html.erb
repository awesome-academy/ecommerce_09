<div class="container">
  <h1><%= t ".list_products" %></h1>
  <table class='table table-bordered'>
    <thead>
      <tr>
        <th>ID</th>
        <th><%= t ".name" %></th>
        <th><%= t ".category" %></th>
        <th><%= t ".price" %></th>
        <th><%= t ".quantity" %></th>
        <th><%= t ".created_at" %></th>
      </tr>
    </thead>
    <tbody>
      <% @admin_products.each_with_index do |product, index| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.name %></td>
          <td><%= product.category.name %></td>
          <td><%= product.price %></td>
          <td><%= product.quantity %></td>
          <td><%= l product.created_at, format: :short %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
